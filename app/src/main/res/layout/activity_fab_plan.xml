<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            app:elevation="4dp"
            android:id="@+id/fab_plan_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <TextView
        android:id="@+id/fab_plan_tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="16sp"
        android:text="总结"
        android:textColor="@color/colorBlack"
        android:alpha="0.70"
        />
    <EditText
        android:id="@+id/fab_plan_et_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fab_plan_tv_summary"
        android:minLines="4"
        android:maxLines="4"
        android:background="@drawable/et"
        android:layout_margin="8dp"
        android:hint="写写你的总结吧"
        android:gravity="start|top"
        android:padding="8dp"/>
    <TextView
        android:id="@+id/fab_plan_tv_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fab_plan_et_summary"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="16sp"
        android:text="计划"
        android:textColor="@color/colorBlack"
        android:alpha="0.70"
        />
    <EditText
        android:id="@+id/fab_plan_et_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fab_plan_tv_plan"
        android:minLines="4"
        android:maxLines="4"
        android:background="@drawable/et"
        android:layout_margin="8dp"
        android:hint="写写你的计划吧"
        android:gravity="start|top"
        android:padding="8dp"/>
    <LinearLayout
        android:id="@+id/fab_plan_pb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:background="@color/colorTranslucence"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </LinearLayout>
</RelativeLayout>